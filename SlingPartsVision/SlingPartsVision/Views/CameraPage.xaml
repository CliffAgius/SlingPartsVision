<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SlingPartsVision.Views.CameraPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:SlingPartsVision.ViewModels"
    Title="CameraPage">

    <ContentPage.BindingContext>
        <vm:CameraPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout
        Padding="30"
        HorizontalOptions="Fill"
        Spacing="25"
        VerticalOptions="Fill">
        <Label HorizontalTextAlignment="Center" Text="Take a picture to upload." />

        <Image
            HeightRequest="300"
            Source="{Binding ImageSource}"
            WidthRequest="300" />

        <Label FontSize="Medium" Text="{Binding TagName}" />
        <Label FontSize="Medium" Text="{Binding TagImageCount}" />
        <Label
            FontSize="Small"
            Text="Recommended minimum images per tag is 15-20."
            TextColor="{StaticResource Gray400}" />

        <Button
            Command="{Binding TakePhotoCommand}"
            Text="Take Photo!"
            VerticalOptions="End" />

    </VerticalStackLayout>
</ContentPage>